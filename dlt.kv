<UI>:
    id:scr_manager
    MainScreen:
    Register:
<MainScreen>:
    name:"main_scr"
    canvas.before:
        Rectangle:
            source:"pre.jpg"
            size:root.width,root.height
            pos:self.pos
    BoxLayout:
        orientation:"vertical" 
        Label:
            text:"ระบบการอบรมใบอนุญาตขับรถ"
            font_name:"tahoma"
        Button:
            text:"เข้าสู่ระบบ"
            background_color:'#996666'
            size_hint:0.30,0.15
            pos_hint: {'x': 0.38,'y': 0.25}
            font_name:"tahoma"
            on_press:app.root.current="Scr2"
        Button:
            text:"ลงทะเบียนใหม่"
            background_color:'#996666'
            size_hint:0.30,0.10
            pos_hint: {'x': 0.38,'y': 0.25}
            font_name:"tahoma"
            on_press:app.root.current="Scr2"
        Button:
            text:"For Foreigner"
            background_color:'#996666'
            size_hint:0.30,0.10
            pos_hint: {'x': 0.38,'y': 0.25}
            font_name:"tahoma"
            on_press:app.root.current="Scr2"
<Register>:
    name: 'Scr2'
    BoxLayout:
        orientation: 'vertical'
        GridLayout:
            cols: 1   
            Image:  # layer1
                source: "pre.jpg"
            Label:
                text: 'ระบุเลขบัตรประชาชน'
                font_name: "tahoma"
                font_size: '24sp'
                size_hint: 1, 1
            TextInput:
                id: password
                hint_text: 'ระบุเลขบัตรประชาชน'
                font_name: "tahoma"
                password: True
                multiline: False
                size_hint: 1, 1
                background_color: 255, 99, 71, 0.2  # ค่าสี RGBa สำหรับปุ่ม

            TextInput:
                id: password
                hint_text: 'ระบุเลขบัตรประชาชนอีกครั้ง'
                font_name: "tahoma"
                password: True
                multiline: False
                size_hint: 1, 1
                background_color: 255, 99, 71, 0.2  # ค่าสี RGBa สำหรับปุ่ม

            TextInput:
                id: password
                hint_text: 'ระบุเบอร์โทร'
                font_name: "tahoma"
                password: True
                multiline: False
                size_hint: 1, 1
                background_color: 255, 99, 71, 0.2  # ค่าสี RGBa สำหรับปุ่ม

            TextInput:
                id: password
                hint_text: 'ระบุอีเมล'
                font_name: "tahoma"
                password: True
                multiline: False
                size_hint: 1, 1
                background_color: 255, 99, 71, 0.2  # ค่าสี RGBa สำหรับปุ่ม


            Button:
                text: 'ดำเนินการต่อ'
                font_name: "tahoma"
                size_hint: 1, 1
                on_press: root.submit_registration()
                background_color: 255, 99, 71, 0.2  # ค่าสี RGBa สำหรับปุ่ม
