<UI>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            Spinner:
                id: spin_lang
                text:"please select"
                values:("python","php","html","sql")    
                size_hint:(0.4,0.2)  
                pos_hint: {'top': 1}
            Label:
                id: lbl_output
                text: "you selected :{}  ".format(spin_lang.text)
        BoxLayout:
        #ส่วนล่าง
            Label:
                text: "Add item"
            TextInput:
                id: txt_input
            Button:
                id: btn_additem
                text: "Add item"
                on_press: root.add_item()
